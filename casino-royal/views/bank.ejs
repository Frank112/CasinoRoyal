<!DOCTYPE html>
<html>
<head>
    <title>Casino Royale - Bank</title>
    <link rel="stylesheet" href="css/vendor/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">

</head>
<body ng-app="casino" ng-controller="Controller">
<div class="row">
    <div class="jumbotron col-md-10 col-md-offset-1">
        <h1>Casino Royale</h1>

        <p>Bankeditor</p>
    </div>
</div>
<div class="row">
    <div class=" panel panel-default col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <div class="panel-heading"><h1>Geldinfo</h1></div>
        <div class="panel-body">
            <div class="col-md-4">
                Gesamt: <h3>{{moneyInfo.bank + moneyInfo.circulation}}</h3>
            </div>
            <div class="col-md-4">
                Bank: <h3>{{moneyInfo.bank}}</h3>
            </div>
            <div class="col-md-4">
                Im Umlauf: <h3>{{moneyInfo.circulation}}</h3>
            </div>
        </div>
    </div>
</div>
<div class="row" ng-repeat="drink in drinks">
    <div class=" panel panel-default col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <div class="panel-heading"><h1>{{drink.name}}</h1></div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-1 col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-4 col-xs-offset-1">
                    <button type="button" class="btn btn-default" ng-click="makeTransaction(drink, false)"
                            data-toggle="modal" data-target="#booking">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </div>
                <div class="col-lg-4 col-lg-offset-1 col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-4 col-xs-offset-1">
                    <button type="button" class="btn btn-default" ng-click="makeTransaction(drink, true)"
                            data-toggle="modal" data-target="#booking">
                        <span class="glyphicon glyphicon-minus"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="panel panel-default col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <div class="panel-heading"><h1>Direktbuchung</h1></div>
        <div class="panel-body">
            <form novalidate>
                Betrag: <input type="number" min="0" ng-model="directTransactionValue"/>
            </form>
            <div class="col-lg-4 col-lg-offset-1 col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-4 col-xs-offset-1">
                <button type="button" class="btn btn-default" ng-click="makeDirectTransaction(false)">
                    <span class="glyphicon glyphicon-plus"></span>
                </button>
            </div>
            <div class="col-lg-4 col-lg-offset-1 col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 col-xs-4 col-xs-offset-1">
                <button type="button" class="btn btn-default" ng-click="makeDirectTransaction(true)">
                    <span class="glyphicon glyphicon-minus"></span>
                </button>
            </div>
        </div>
    </div>
</div>
</div>

<div id="booking" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"><span class="glyphicon glyphicon-ok"></span> Buchung erfolgreich</h4>
            </div>
            <div class="modal-body">
                <jumbotron><h1>Wert der Buchung: {{lastTransaction.value}}</p></jumbotron>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

</body>

<!-- Latest compiled and minified JavaScript -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

<!-- Bootstrap -->
<script type="text/javascript" src="javascripts/vendor/bootstrap.min.js"></script>

<!-- Angular -->
<script type="text/javascript" src="javascripts/vendor/angular.min.js"></script>
<script type="text/javascript" src="javascripts/angularApp.js"></script>

</html>
